<?xml version="1.0" encoding="utf-8"?>
<org.lmy.open.widgetlibrary.SwipeMenuLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    app:ios="true"
    app:leftSwipe="true"
    app:swipeEnable="true">

    <include
        layout="@layout/layout_collectlist_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    </include>

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:paddingLeft="30dp"
        android:paddingTop="20dp"
        >

        <RelativeLayout
            android:id="@+id/btn_loyalty"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/circular_bg"
            android:gravity="center"
            >

            <Button
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/loyalty_black_36x36"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:paddingLeft="30dp"
        android:paddingTop="20dp"
        >

        <RelativeLayout
            android:id="@+id/btn_delete"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/circular_bg"
            android:gravity="center"
            >

            <Button
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/delete_forever_black_36x36"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="30dp"
        android:layout_height="30dp"
        >
    </LinearLayout>
</org.lmy.open.widgetlibrary.SwipeMenuLayout>